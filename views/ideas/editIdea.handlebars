<h1></h1>
{{#each errors}}
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>{{text}}</strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{else}}

{{/each}}

<form action="/ideas/edit/{{idea._id}}" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="title" value="{{idea.title}}">
  </div>
  <div class="form-group">
    <label>Details</label>
    <input name="details" class="form-control" value="{{idea.details}}">
  </div>
  <button type="submit" class="btn btn-primary">Update Idea</button>
</form>